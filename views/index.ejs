<!DOCTYPE html>
<html>
  <head>
    <title>TABLA DE contactos DE TECSUP - CRUD</title>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>

    <script type="text/javascript">
      function DeleteConfirm() {
        if (confirm("¿Quieres eliminar el registro?"))
          return true;
        else
          return false;
      }
      function CreateConfirm() {
        if (confirm("¿Quieres agregar un nuevo registro?"))
          return true;
        else
          return false;
      }
      function EditConfirm() {
        if (confirm("¿Quieres editar este registro?"))
          return true;
        else
          return false;
      }
    </script>
  </head>
  <style>
    .dataTables_filter {
      margin-bottom: 25px;
    }
    .table-responsive{
      margin: 25px;
    }
    
    
  </style>
  <body>
    <div class="table-responsive">
      <br>
      <h1 align="center" style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">TABLA DE CONTACTO</h1>
      <br>
      <a href="/create" onclick="return CreateConfirm()" type="button" class="btn btn-success">INGRESAR NUEVO CONTACTO</a>
      <br>
      <br>
      <br>
      <table class="table table-dark table-bordered table-striped" id="myTable">
        <thead align="center">
          <tr>
            <th>ID</th>
            <th>NOMBRE</th>
            <th>APELLIDOS</th>
            <th>DIRECCION</th>
            <th>CORREO</th>
            <th>EDAD</th>
            <th>IMAGEN</th>
            <th>ACCIONES</th>
          </tr>
        </thead>
        <tbody align="center">
          <% data.forEach((row) => { %>
            <tr>
              <td class="align-middle"><%= row.id %></td>
              <td class="align-middle"><%= row.nombre %></td>
              <td class="align-middle"><%= row.apellidos%></td>
              <td class="align-middle"><%= row.direccion%></td>
              <td class="align-middle"><%= row.correo%></td>
              <td class="align-middle"><%= row.edad%></td>
              <td class="align-middle">
              <!--Poniendo la ruta (src="/images/<%= row.imagen %>") se pueden ver las imagenes locales -->
              <img src="https://examen03.s3-us-east-2.amazonaws.com/<%= row.imagen %>" alt="" height="80" style="border-radius: 10px;">
            </td>
              <td class="align-middle">
                <div class="d-grid gap-2 d-md-block">
                  <a href="/edit/<%= row.id %>" onclick="return EditConfirm()" type="button" class="btn btn-warning me-1">EDITAR</a>
                  <a href="/delete/<%= row.id %>" onclick="return DeleteConfirm()" class="btn btn-danger" type="button">ELIMINAR</a>
                </div>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0"></script>
    <script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js"></script>
    <script>
      $(document).ready(function() {
        $('#myTable').DataTable();
      });
    </script>